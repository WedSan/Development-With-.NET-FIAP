@model Toy

@{
    ViewData["Title"] = "Deletar Brinquedo";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Toy Management</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2>@ViewData["Title"]</h2>

        <h3>Tem certeza que deseja deletar este brinquedo?</h3>
        <div>
            <h4>@Model.ToyName</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Tipo</dt>
                <dd class="col-sm-10">@Model.ToyType</dd>
                <dt class="col-sm-2">Classificação</dt>
                <dd class="col-sm-10">@Model.Classification</dd>
                <dt class="col-sm-2">Tamanho</dt>
                <dd class="col-sm-10">@Model.Size</dd>
                <dt class="col-sm-2">Preço</dt>
                <dd class="col-sm-10">@Model.Price</dd>
            </dl>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="ToyId" />
                <input type="submit" value="Deletar" class="btn btn-danger">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>