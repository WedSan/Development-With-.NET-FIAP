@model List<PizzariaDonCorleone.Models.Pizza>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pizzaria Don Corleone</title>
    
    <!-- Link para o Bootstrap (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    
</head>
<body>
    <!-- Navbar do Bootstrap -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Pizzaria Don Corleone</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Alternar navegação">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Início</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Menu">Menu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Contato">Contato</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Container principal -->
    <div class="container my-5">
        <h2 class="text-center mb-4">Nossas Pizzas</h2>
        
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var pizza in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@pizza.ImgUrl" class="card-img-top" alt="@pizza.ImgUrl">
                        <div class="card-body">
                            <h5 class="card-title">@pizza.Name</h5>
                            <p class="card-text"><strong>Preço: R$ @pizza.Price.ToString("F2")</strong></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Rodapé -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p>&copy; 2024 Pizzaria Don Corleone. Todos os direitos reservados.</p>
    </footer>

    <!-- Script do Bootstrap (necessário para interações como o menu hamburger) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
